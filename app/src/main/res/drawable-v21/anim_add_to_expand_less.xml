<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_add_white_fat_24dp">
    <target
        android:name="single_path_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/fab_animation_duration"
                    android:propertyName="rotation"
                    android:valueFrom="0.0"
                    android:valueTo="135.0"/>
            </set>
        </aapt:attr>
    </target>

    <target
        android:name="sw">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/fab_animation_duration"
                    android:propertyName="pathData"
                    android:valueFrom="@string/path_add_sw"
                    android:valueTo="@string/path_expand_less_middle"
                    android:valueType="pathType" />
            </set>
        </aapt:attr>
    </target>

    <target
        android:name="ne">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/fab_animation_duration"
                    android:propertyName="pathData"
                    android:valueFrom="@string/path_add_ne"
                    android:valueTo="@string/path_expand_less_turned"
                    android:valueType="pathType" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>
